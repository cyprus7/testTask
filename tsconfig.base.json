{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ESNext",
        "moduleResolution": "Bundler",
        "rootDir": ".",
        "baseUrl": ".",
        "paths": {
            "@domain/*": [
                "packages/shared-domain/src/*"
            ],
            "@contracts/*": [
                "packages/shared-contracts/src/*"
            ],
            "@shared-config/*": [
                "packages/shared-config/src/*"
            ]
        },
        "strict": true,
        "noEmit": true,
        "types": [
            "node"
        ]
    },
    "exclude": [
        "**/dist",
        "**/.next",
        "**/node_modules"
    ]
}