        "rootDir": "src",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "ES2022",
        "outDir": "dist",
        "noEmit": false,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true
